import("//foundation/communication/dsoftbus/dsoftbus.gni")
AUTH_SERVER_DEFINES = []

auth_server_src = [
  "$dsoftbus_root_path/core/authentication/src/auth_common.c",
  "$dsoftbus_root_path/core/authentication/src/auth_connection.c",
  "$dsoftbus_root_path/core/authentication/src/auth_manager.c",
  "$dsoftbus_root_path/core/authentication/src/auth_sessionkey.c",
  "$dsoftbus_root_path/core/authentication/src/auth_socket.c",
]
auth_server_inc = [
  "$dsoftbus_root_path/core/authentication/include",
  "$dsoftbus_root_path/core/authentication/interface",
]
auth_server_deps = []
if (defined(ohos_lite)) {
    if (enable_auth_account == true) {
      AUTH_SERVER_DEFINES += [ "AUTH_ACCOUNT" ]
    }
    if (enable_auth_account == true) {
      hichain_deps = "//base/security/deviceauth/hichain:deviceauth_sdk"
      hichain_include_dir = "//base/security/deviceauth/interface"
    } else {
      hichain_deps = "//base/security/deviceauth/services:deviceauth_sdk"
      hichain_include_dir = "//base/security/deviceauth/interfaces/innerkits"
    }
    auth_server_inc += [
      "$hichain_include_dir",
      "//third_party/cJSON",
    ]
    auth_server_deps += [ "$hichain_deps" ]
} else {
  auth_server_inc += [
    "//base/security/deviceauth/interfaces/innerkits",
    "//third_party/cJSON",
  ]
}
